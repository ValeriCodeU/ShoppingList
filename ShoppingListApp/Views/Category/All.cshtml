@model IEnumerable<CategoryDetailsViewModel>

@{
	ViewBag.Title = "View All Categories";
	int count = 0;
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<table class="table table-success table-hover">
	<thead>
		<tr>
			<th scope="col">#</th>
			<th scope="col">Name</th>			
			<th scope="col">Actions</th>

		</tr>
	</thead>
	<tbody>
		@foreach (var category in Model)
		{
			count++;
			<tr>
				<th scope="row">@count</th>
				<td>@category.Name</td>
				
				<td>
					@*<a asp-area="" asp-action="Details" asp-controller="Problem" asp-route-id="" class="btn btn-primary">Details</a>*@
					<a asp-area="" asp-action="Edit" asp-controller="Category" asp-route-id="@category.Id" class="btn btn-success">Edit</a>
					<a asp-area="" asp-action="Delete" asp-controller="Category" asp-route-id="@category.Id" class="btn btn-danger">Delete</a>
				</td>
			</tr>
		}

	</tbody>
</table>
